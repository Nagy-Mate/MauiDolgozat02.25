<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiDolgozat.ViewModels"
             xmlns:models="clr-namespace:MauiDolgozat.Common"
             x:Class="MauiDolgozat.Views.UpdatePage"
             x:DataType="viewModel:UpdateViewModel"
             Title="UpdatePage">
    
    <VerticalStackLayout WidthRequest="400">

        <Label Text="Válasszon tanulót: "/>
        <Picker ItemsSource="{Binding Students}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"/>
        
        <Label Text="Adja meg a nevet: "/>
        <Entry Text="{Binding Name}" />

        <Label Text="Válasszon nemet: "/>
        <Picker ItemsSource="{Binding Genders}" SelectedItem="{Binding SelectedGender, Mode=TwoWay}"/>

        <Label Text="Adja meg a magasságot: "/>
        <Entry Text="{Binding Height}" />

        <Label Text="Adja meg a súlyt: "/>
        <Entry Text="{Binding Weight}" />

        <Label Text="Adja meg az osztályt: "/>
        <Entry Text="{Binding ClassName}" />

        <Button  Text="Mentés" Command="{Binding UpdateStudentCommand}" Background="Orange"/>
    </VerticalStackLayout>
</ContentPage>