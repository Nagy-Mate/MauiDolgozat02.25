<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiDolgozat.ViewModels"
             xmlns:models="clr-namespace:System.Data.Common;assembly=netstandard"
             x:DataType="viewModel:MainPageViewModel"
             x:Class="MauiDolgozat.Views.MainPage">


    <CollectionView ItemsSource="{Binding}" HorizontalOptions="Center" MaximumWidthRequest="400">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <HorizontalStackLayout Padding="10" Spacing="10">
                    <Label Text="{Binding .}" FontSize="18" FontAttributes="Bold" />

                    <!--Label Text="{Binding, StringFormat='{0:C}'}" TextColor="Green"/>
                    <Label Text="{Binding , StringFormat='Készlet: {0} db'}" TextColor="Blue"/-->


                </HorizontalStackLayout>
            </DataTemplate>

        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>
