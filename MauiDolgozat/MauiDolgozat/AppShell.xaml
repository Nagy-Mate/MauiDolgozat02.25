<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiDolgozat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiDolgozat.Views"
    Title="MauiDolgozat">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
         Title="Add Student"
         ContentTemplate="{DataTemplate local:AddPage}"
         Route="AddPage" />

    <ShellContent
         Title="Delete Student"
         ContentTemplate="{DataTemplate local:DeletePage}"
         Route="DeletePage" />
    
    <ShellContent
         Title="Update Student"
         ContentTemplate="{DataTemplate local:UpdatePage}"
         Route="UpdatePage" />

    <ShellContent
         Title="Reports"
         ContentTemplate="{DataTemplate local:ReportPage}"
         Route="ReportPage" />




</Shell>
